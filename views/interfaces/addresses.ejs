
<form novalidate="" action="/dashboard/addresses" method="post" class="p-4 container flex flex-col w-full space-y-12">
    <fieldset class="grid grid-cols-4 gap-6 p-6 rounded-md shadow-sm dark:bg-gray-900">
        <div class="space-y-2 col-span-full lg:col-span-1">
            <p class="font-medium">New Address</p>
        </div>
        <div class="grid grid-cols-6 gap-4 col-span-full lg:col-span-3">
            <div class="col-span-full sm:col-span-3">
                <label for="state" class="text-sm">State</label>
                <input id="state" name="state" type="text" placeholder="State" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
            </div>
            <div class="col-span-full sm:col-span-3">
                <label for="city" class="text-sm">City</label>
                <input id="city" name="city" type="text" placeholder="City" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
            </div>
            <div class="col-span-full sm:col-span-3">
                <label for="address" class="text-sm">Address</label>
                <textarea id="address" name="address" type="text" placeholder="Address" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></textarea>
            </div>
            <div class="col-span-full">
                <label for="plaque" class="text-sm">plaque</label>
                <input id="plaque" name="plaque" placeholder="plaque" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></input>
            </div>
            <div class="col-span-full">
                <label for="postcode" class="text-sm">postcode</label>
                <input id="postcode" name="postcode" placeholder="postcode" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></input>
            </div>
            <div class="col-span-full">
                <label for="unit" class="text-sm">unit</label>
                <input id="unit" name="unit" placeholder="unit" class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></input>
            </div>
            <div class="col-span-full">
                <div class="flex items-center space-x-2">
                    <button type="submit" class="px-4 py-2 border rounded-md dark:border-gray-100">Save</button>
                </div>
            </div>
        </div>
    </fieldset>
</form>
<% locals.addresses.forEach(element => { %>
    <div class="dark:bg-gray-800 dark:text-gray-100">
        <div class="container max-w-4xl px-10 py-6 mx-auto rounded-lg shadow-sm dark:bg-gray-900">
            <div class="flex items-center justify-between">
                <span class="text-sm dark:text-gray-400"><%= element.date %></span>
                <a rel="noopener noreferrer" href="#" class="px-2 py-1 font-bold rounded dark:bg-default-400 dark:text-gray-900">Javascript</a>
            </div>
            <div class="mt-3">
                <p rel="noopener noreferrer" href="#" class="text-2xl font-bold hover:underline"><%= element.state %> - <%= element.city %> </p>
                <p class="mt-2"><%= element.address %> , plaque <%= element.plaque %> , postcode <%= element.postcode %> , unit <%= element.unit %></p>
            </div>
            <div class="flex items-center justify-between mt-4">
                <a rel="noopener noreferrer" href="#" class="hover:underline dark:text-default-400">edit</a>
                <a rel="noopener noreferrer" href="#" class="hover:underline dark:text-default-400">delete</a>
            </div>
        </div>
    </div>
<% }) %>