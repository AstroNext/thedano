<div class="flex justify-center items-center">
    <div class="w-full max-w-md p-8 space-y-3 rounded-xl dark:bg-gray-900 dark:text-gray-100">
        <h1 class="text-3xl font-bold text-center">Login</h1>
        <% if(typeof errormessage != "undefined" ) { %>
            <label for="username" class="text-1xl font-bold text-center dark:text-red-400"><%= errormessage %> </label>
        <% } %>
        <form novalidate="" action="/login" method="post" class="space-y-6">
            <div class="space-y-1 text-sm">
                <label for="username" class="block dark:text-gray-400">Username</label>
                <input type="text" name="username" id="username" placeholder="Username" class="w-full px-4 py-3 rounded-md dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:border-violet-400">
                <% if(typeof errors != "undefined" && typeof errors['username'] != "undefined") { %>
                    <label for="username" class="block dark:text-red-400"><%= errors['username'] %> </label>
                <% } %>
            </div>
            <div class="space-y-1 text-sm">
                <label for="password" class="block dark:text-gray-400">Password</label>
                <input type="password" name="password" id="password" placeholder="Password" class="w-full px-4 py-3 rounded-md dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:border-violet-400">
                <% if(typeof errors != "undefined" && typeof errors['password'] != "undefined") { %>
                    <label for="password" class="block dark:text-red-400"><%= errors['password'] %> </label>
                <% } %>
            </div>
            <div class="flex justify-between">
                <div class="flex items-center">
                    <input type="checkbox" name="remember" id="remember" aria-label="Remember me" class="mr-1 rounded-sm focus:ri focus:dark:border-default-400 focus:ri dark:accent-default-400">
                    <label for="remember" class="text-sm dark:text-gray-400">Remember me</label>
                </div>
                <a class="text-sm dark:text-gray-400" href="#">Forgot your password?</a>
            </div>
            <button class="block w-full p-3 text-center rounded-sm dark:text-gray-900 dark:bg-violet-400" type="submit">Sign in</button>
        </form>
        <p class="text-xs text-center sm:px-6 dark:text-gray-400">Don't have an account?
            <a rel="noopener noreferrer" href="/signup" class="underline dark:text-gray-100">Sign up</a>
        </p>
    </div>
</div>